            { russian: "идти", pronunciation: "[idti]", translation: "aller (à pied)", categories: ["basics", "travel"] },
            { russian: "ехать", pronunciation: "[yèkhat]", translation: "aller (en transport)", categories: ["basics", "travel"] },
            { russian: "покупать", pronunciation: "[pakoupat]", translation: "acheter", categories: ["basics", "shopping"] },
            { russian: "продавать", pronunciation: "[pradavat]", translation: "vendre", categories: ["basics", "shopping"] },
            { russian: "помогать", pronunciation: "[pamagat]", translation: "aider", categories: ["basics"] },
            { russian: "изучать", pronunciation: "[izoutchat]", translation: "étudier", categories: ["basics", "work"] }
        ];

        // Variables globales (identiques à celles du document original)
        let currentCategory = "all";
        let allTranslationsHidden = false;
        let allPronunciationsHidden = false;
        let allRussianHidden = false;
        let hiddenWords = new Set();

        // Fonctions (identiques à celles du document original)
        function initializeApp() {
            updateVocabularyDisplay();
            setupEventListeners();
            updateWordCounters();
        }

        function setupEventListeners() {
            // Filtres de catégorie
            document.querySelectorAll('.category-filter').forEach(filter => {
                filter.addEventListener('click', function() {
                    document.querySelectorAll('.category-filter').forEach(f => f.classList.remove('active'));
                    this.classList.add('active');
                    
                    currentCategory = this.getAttribute('data-category');
                    document.getElementById('current-category').textContent = 
                        this.textContent === 'Tous' ? 'Tous les mots' : this.textContent;
                    
                    updateVocabularyDisplay();
                });
            });

            // Recherche de vocabulaire
            document.getElementById('vocab-search').addEventListener('input', function() {
                updateVocabularyDisplay();
            });

            // Bouton remonter en haut
            window.addEventListener('scroll', function() {
                if (document.body.scrollTop > 200 || document.documentElement.scrollTop > 200) {
                    document.getElementById('back-to-top').classList.add('visible');
                } else {
                    document.getElementById('back-to-top').classList.remove('visible');
                }
            });

            document.getElementById('back-to-top').addEventListener('click', function(e) {
                e.preventDefault();
                window.scrollTo({top: 0, behavior: 'smooth'});
            });

            // Basculer le thème clair/sombre
            document.getElementById('theme-toggle').addEventListener('click', function() {
                document.body.classList.toggle('dark-mode');
                this.textContent = document.body.classList.contains('dark-mode') ? '☀️' : '🌙';
            });

            // Contrôles de masquage/affichage
            document.getElementById('hide-all-translations').addEventListener('click', function() {
                document.querySelectorAll('.translation').forEach(translation => {
                    translation.classList.add('hidden-translation');
                });
                allTranslationsHidden = true;
            });

            document.getElementById('show-all-translations').addEventListener('click', function() {
                document.querySelectorAll('.translation').forEach(translation => {
                    translation.classList.remove('hidden-translation');
                });
                allTranslationsHidden = false;
            });
            
            document.getElementById('hide-all-pronunciations').addEventListener('click', function() {
                document.querySelectorAll('.pronunciation').forEach(pronunciation => {
                    pronunciation.classList.add('hidden-pronunciation');
                });
                allPronunciationsHidden = true;
            });

            document.getElementById('show-all-pronunciations').addEventListener('click', function() {
                document.querySelectorAll('.pronunciation').forEach(pronunciation => {
                    pronunciation.classList.remove('hidden-pronunciation');
                });
                allPronunciationsHidden = false;
            });
            
            document.getElementById('hide-all-russian').addEventListener('click', function() {
                document.querySelectorAll('.russian-word').forEach(russianWord => {
                    russianWord.classList.add('hidden-russian');
                });
                allRussianHidden = true;
            });

            document.getElementById('show-all-russian').addEventListener('click', function() {
                document.querySelectorAll('.russian-word').forEach(russianWord => {
                    russianWord.classList.remove('hidden-russian');
                });
                allRussianHidden = false;
            });
            
            document.getElementById('restore-all-words').addEventListener('click', function() {
                hiddenWords.clear();
                updateVocabularyDisplay();
                updateWordCounters();
            });
        }

        function updateVocabularyDisplay() {
            const searchTerm = document.getElementById('vocab-search').value.toLowerCase();
            
            const filtered = vocabulary.filter(word => {
                const matchesCategory = currentCategory === 'all' || word.categories.includes(currentCategory);
                const matchesSearch = 
                    word.russian.toLowerCase().includes(searchTerm) ||
                    word.pronunciation.toLowerCase().includes(searchTerm) ||
                    word.translation.toLowerCase().includes(searchTerm);
                const isVisible = !hiddenWords.has(word.russian);
                
                return matchesCategory && matchesSearch && isVisible;
            });
            
            const container = document.getElementById('vocab-container');
            container.innerHTML = '';
            
            filtered.forEach(word => {
                const card = document.createElement('div');
                card.className = 'vocab-card';
                card.dataset.word = word.russian;
                card.dataset.categories = word.categories.join(',');
                
                const cardContent = `
                    <div class="card-controls">
                        <button class="card-btn toggle-russian-btn" title="Masquer/Afficher le mot russe">🇷🇺</button>
                        <button class="card-btn toggle-pronunciation-btn" title="Masquer/Afficher la prononciation">🔊</button>
                        <button class="card-btn toggle-translation-btn" title="Masquer/Afficher la traduction">👁️</button>
                        <button class="card-btn remove-word-btn" title="Masquer ce mot">❌</button>
                    </div>
                    <div class="card-body">
                        <div class="russian-word ${allRussianHidden ? 'hidden-russian' : ''}">${word.russian}</div>
                        <div class="pronunciation ${allPronunciationsHidden ? 'hidden-pronunciation' : ''}">${word.pronunciation}</div>
                        <div class="translation ${allTranslationsHidden ? 'hidden-translation' : ''}">${word.translation}</div>
                        <div style="display: flex; flex-wrap: wrap; gap: 5px; margin-bottom: 10px;">
                            ${word.categories.map(cat => `<span class="category-tag">${cat}</span>`).join('')}
                        </div>
                    </div>
                `;
                
                card.innerHTML = cardContent;
                container.appendChild(card);
                
                // Écouteurs d'événements pour les boutons
                card.querySelector('.toggle-russian-btn').addEventListener('click', function() {
                    const russianWord = this.closest('.vocab-card').querySelector('.russian-word');
                    russianWord.classList.toggle('hidden-russian');
                });
                
                card.querySelector('.toggle-pronunciation-btn').addEventListener('click', function() {
                    const pronunciation = this.closest('.vocab-card').querySelector('.pronunciation');
                    pronunciation.classList.toggle('hidden-pronunciation');
                });
                
                card.querySelector('.toggle-translation-btn').addEventListener('click', function() {
                    const translation = this.closest('.vocab-card').querySelector('.translation');
                    translation.classList.toggle('hidden-translation');
                });
                
                card.querySelector('.remove-word-btn').addEventListener('click', function() {
                    const russian = this.closest('.vocab-card').dataset.word;
                    hiddenWords.add(russian);
                    this.closest('.vocab-card').remove();
                    updateWordCounters();
                });
            });
            
            document.getElementById('current-category').textContent = 
                `${currentCategory === 'all' ? 'Tous les mots' : document.querySelector(`.category-filter[data-category="${currentCategory}"]`).textContent} (${filtered.length})`;
                
            updateWordCounters();
        }
        
        function updateWordCounters() {
            const totalWords = vocabulary.length;
            const hiddenWordsCount = hiddenWords.size;
            const visibleWordsCount = totalWords - hiddenWordsCount;
            
            document.getElementById('hidden-words-count').textContent = hiddenWordsCount;
            document.getElementById('visible-words-count').textContent = visibleWordsCount;
        }

        // Initialiser l'application
        document.addEventListener('DOMContentLoaded', initializeApp);
    </script>
</body>
</html>
