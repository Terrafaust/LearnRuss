    <script>
        function showSection(sectionId) {
            const sections = document.querySelectorAll('.section-content');
            sections.forEach(section => section.classList.remove('active'));
            
            document.getElementById(sectionId).classList.add('active');
            
            const tabs = document.querySelectorAll('.section-tab');
            tabs.forEach(tab => tab.classList.remove('active'));
            
            const activeTab = Array.from(tabs).find(tab => tab.getAttribute('onclick').includes(sectionId));
            if (activeTab) activeTab.classList.add('active');
        }
        
        function filterLetters() {
            const searchTerm = document.getElementById('searchLetters').value.toLowerCase();
            const letterCards = document.querySelectorAll('.letter-card');
            
            letterCards.forEach(card => {
                const letterText = card.getAttribute('data-letter').toLowerCase();
                const cardContent = card.textContent.toLowerCase();
                
                if (letterText.includes(searchTerm) || cardContent.includes(searchTerm)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }
        
        function populateCategoryGrids() {
            const similarLetters = document.querySelectorAll('.letter-card.similar');
            const differentLetters = document.querySelectorAll('.letter-card.different');
            const uniqueLetters = document.querySelectorAll('.letter-card.unique');
            
            similarLetters.forEach(letter => {
                const clone = letter.cloneNode(true);
                document.getElementById('similar-grid').appendChild(clone);
            });
            
            differentLetters.forEach(letter => {
                const clone = letter.cloneNode(true);
                document.getElementById('different-grid').appendChild(clone);
            });
            
            uniqueLetters.forEach(letter => {
                const clone = letter.cloneNode(true);
                document.getElementById('unique-grid').appendChild(clone);
            });
        }
        
        document.addEventListener('DOMContentLoaded', populateCategoryGrids);
    </script>
</body>
